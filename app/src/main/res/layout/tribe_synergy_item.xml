<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/tradeCardVIew"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#F1E6E6"
        app:cardCornerRadius="5dp"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true"
        app:contentPadding="5dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/synergyImage"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    app:srcCompat="@drawable/ic_launcher_foreground" />

                <TextView
                    android:id="@+id/tvJob"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="공허"
                    android:textSize="25dp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginStart="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/tribeImage1"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="#222333"
                            android:src="@drawable/ic_action_search" />

                        <ImageView
                            android:id="@+id/tribeImage2"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="#222333"
                            android:src="@drawable/ic_action_search" />

                        <ImageView
                            android:id="@+id/tribeImage3"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="#222333"
                            android:src="@drawable/ic_action_search" />

                        <ImageView
                            android:id="@+id/tribeImage4"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="#222333"
                            android:src="@drawable/ic_action_search" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/tribeImage5"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="#222333"
                            android:src="@drawable/ic_action_search" />

                        <ImageView
                            android:id="@+id/tribeImage6"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="#222333"
                            android:src="@drawable/ic_action_search" />

                        <ImageView
                            android:id="@+id/tribeImage7"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="#222333"
                            android:src="@drawable/ic_action_search" />

                        <ImageView
                            android:id="@+id/tribeImage8"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="#222333"
                            android:src="@drawable/ic_action_search" />

                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvMainContents"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="이제 공허 챔피언들이 고정 피해를 입힙니다."/>

                <TextView
                    android:id="@+id/tvSubContent1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:layout_marginTop="20dp"
                    android:text="(2) 적을 기절 시킬 확률 20%"/>
                <TextView
                    android:id="@+id/tvSubContent2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="(4) 적을 기절시킬 확률 33%"/>
                <TextView
                    android:id="@+id/tvSubContent3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="(6) 적을 기절시킬 확률 50%"/>

            </LinearLayout>



        </LinearLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>